# Cloudflare AI Gateway Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_GATEWAY_ID=your_gateway_id
CLOUDFLARE_API_TOKEN=your_cloudflare_token

# Provider API Keys (at least one required)
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
GOOGLE_API_KEY=your_google_key
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Environment Configuration
ENVIRONMENT=development

# Authentication Configuration
GATEWAY_API_KEYS=test-key,production-key-1,production-key-2
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ENABLE_REQUEST_SIGNATURE=false
SIGNATURE_SECRET=your_request_signature_secret_here

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=30000
RETRY_BACKOFF_FACTOR=2
RETRY_ENABLE_JITTER=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_DATA_SANITIZATION=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=60000
ENABLE_RESPONSE_CACHE=false
CACHE_TTL=3600

# Cost Tracking
ENABLE_COST_TRACKING=true
DAILY_BUDGET_LIMIT=500
COST_ALERT_THRESHOLD=100

# Monitoring and Analytics
ENABLE_CF_ANALYTICS=false
ENABLE_PROMETHEUS_METRICS=false
METRICS_ENDPOINT=/metrics

# Error Reporting
ERROR_REPORTING_URL=
ERROR_REPORTING_TOKEN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=50000

# Provider-specific Configuration
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORGANIZATION=
ANTHROPIC_BASE_URL=https://api.anthropic.com
GOOGLE_PROJECT_ID=
GOOGLE_REGION=us-central1

# High Availability
ENABLE_PROVIDER_FAILOVER=true
FAILOVER_PROVIDERS=openai,anthropic,google
HEALTH_CHECK_INTERVAL=30

# Compliance
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90

# Development/Testing
ENABLE_MOCK_PROVIDERS=true
MOCK_RESPONSE_DELAY=1000
